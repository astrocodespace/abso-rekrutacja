{% extends "base.html.twig" %}

{% block meta_title %}Company index{% endblock %}

{% block search_bar %}
{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-info">
                        <h4 class="card-title">Company index <a href="{{ path('company_new') }}" class="btn btn-primary pull-right">Create new</a></h4>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-hover">
                                <thead class="text-warning">
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Logo</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for company in company %}
                                    <tr>
                                        <td>{{ company.id }}</td>
                                        <td>{{ company.name }}</td>
                                        <td>{{ company.logo }}</td>
                                        <td>
                                            <a href="{{ path('company_show', {'id': company.id}) }}" class="btn btn-success">Show</a>
                                            <a href="{{ path('company_edit', {'id': company.id}) }}" class="btn btn-info">Edit</a>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="8">no records found</td>
                                    </tr>
                                    {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
